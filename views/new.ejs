<% include partials/header %>
<style>
    body{
      background: #4CB8C4;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #3CD3AD, #4CB8C4);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #3CD3AD, #4CB8C4); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }
</style>
<div class="container">
<br>
<h1 style="text-align: center;">Create a NEW Campground</h1>
<div style="width: 30%; margin: 0 auto;">

<form  action="/campgrounds" method="post">
  <div class="form-group">
    <label for="inputName">Enter Name:</label>
    <input class="form-control" type="text" name="name" id="inputName" placeholder="CampGround Name" required>
  </div>

  <div class="form-group">
    <label for="inputImage">Enter Image URL:</label>
    <input class="form-control" type="text" id="inputImage" name="image" placeholder="Image(url)" aria-describedby="urlHelp" required>
    <small class="form-text text-muted" id="urlHelp" >Please Provide Valid URL.</small>
  </div>
  <div class="form-group">
    <label for="text">Sweet Information:</label>
    <input class="form-control" name="des" id="text" aria-describedby="desHelp" required></input>
    <small class="form-text text-muted" id="desHelp" >Describe with one or two words.(Example:Highest Mountain, Best Sunrise, etc...)</small>
  </div>
  <div class="form-group">
    <label for="textArea">Brief Information:</label>
    <textarea name="moreDesc" rows="6" cols="60"></textarea>
  </div>
  <button class="btn btn-success btn-block">Submit</button>

</form><br>
<a href="/campgrounds">Back to CampGround</a>
</div>
</div>
<% include partials/footer %>
